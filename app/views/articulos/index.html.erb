<%= link_to 'Crear', :action=> "new", :controller=>"articulos" %>

<h1>Lista de articulos</h1>

<table>
    <tr>
        <th>Titulo</th>
        <th>Texto</th>
        <th></th>
    </tr>
    <% @articulos.each do |articulo| %>
        <tr>
            <td><%= articulo.title %></td>
            <td><%= articulo.text %></td>
            <td><%= link_to 'Show', articulo_path(articulo) %></td>
            <td><%= link_to 'Editar', edit_articulo_path(articulo) %></td>
            <td> <%= link_to 'Eliminar', articulo_path(articulo),
                     method: :delete,
                     data: { confirm: 'Confirma eliminaciÃ³n?'} %>
            </td>
        </tr>
    <% end %>
</table>